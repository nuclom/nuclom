{
  "$schema": "https://openapi.vercel.sh/microfrontends.json",
  "applications": {
    "nuclom-saas": {
      "packageName": "saas",
      "development": {
        "fallback": "https://nuclom.com"
      }
    },
    "nuclom-marketing": {
      "packageName": "marketing",
      "routing": [
        {
          "paths": [
            "/",
            "/home",
            "/features",
            "/pricing",
            "/contact",
            "/support",
            "/brand",
            "/terms",
            "/privacy",
            "/cookies",
            "/content-policy",
            "/status"
          ]
        }
      ],
      "development": {
        "fallback": "https://nuclom.com"
      }
    }
  }
}