{
  "name": "nuclom",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "license": "Elastic-2.0",
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "tsc": "turbo tsc",
    "lint": "biome check . --error-on-warnings",
    "lint:fix": "biome check . --write --error-on-warnings",
    "format": "biome format . --write",
    "test": "turbo test --filter=!@nuclom/e2e",
    "test:e2e": "pnpm --filter @nuclom/e2e test",
    "test:e2e:saas": "pnpm --filter @nuclom/e2e test:saas",
    "test:e2e:marketing": "pnpm --filter @nuclom/e2e test:marketing",
    "db:generate": "pnpm --filter saas db:generate",
    "db:migrate": "pnpm --filter saas db:migrate",
    "db:push": "pnpm --filter saas db:push",
    "db:studio": "pnpm --filter saas db:studio",
    "socials": "bun run packages/socials/src/cli.ts",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@typescript/native-preview": "catalog:",
    "@vercel/microfrontends": "catalog:",
    "lefthook": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "path-to-regexp@>=4.0.0 <6.3.0": "6.3.0",
      "esbuild@<=0.24.2": ">=0.25.0",
      "undici@<6.23.0": ">=6.23.0",
      "devalue@>=5.1.0 <5.6.2": ">=5.6.2",
      "devalue@>=5.3.0 <=5.6.1": ">=5.6.2"
    },
    "onlyBuiltDependencies": [
      "lefthook"
    ]
  }
}
