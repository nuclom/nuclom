{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.json",
      "!**/*.d.ts",
      "!**/public/openapi.json",
      "!**/public/openapi.yaml"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120,
    "attributePosition": "auto"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "noProcessGlobal": "off"
      },
      "style": {
        "useImportType": "error",
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "next/link": "Use @vercel/microfrontends/next/client Link for cross-zone navigation.",
              "framer-motion": "Use 'motion/react' instead. The 'motion' package is the modern replacement for framer-motion."
            }
          }
        }
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey": "off",
        "noConsole": "error"
      },
      "a11y": {
        "useSemanticElements": "off"
      },
      "performance": {
        "noAccumulatingSpread": "warn",
        "noBarrelFile": "error"
      },
      "nursery": {}
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteStyle": "single",
      "attributePosition": "auto"
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    },
    "linter": {
      "enabled": false
    },
    "formatter": {
      "enabled": false
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "overrides": [
    {
      "includes": ["apps/saas/src/app/(api)/api/**/route.ts"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": {
              "level": "warn",
              "options": {
                "paths": {
                  "@nuclom/lib/db": "Use repository services from @nuclom/lib/effect instead of direct DB access in API routes. See CLAUDE.md for patterns."
                }
              }
            }
          }
        }
      }
    },
    {
      "includes": ["apps/saas/src/app/(api)/api/health/db/route.ts"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedImports": "off"
          }
        }
      }
    },
    {
      "includes": ["scripts/**/*.ts", "scripts/**/*.js"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["infra/**/*.ts", "infra/**/*.js"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["**/logger.ts", "**/client-logger.ts", "**/workflow-logger.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/test/**/*.ts",
        "**/test/**/*.tsx",
        "**/tests/**/*.ts",
        "**/tests/**/*.js",
        "**/*.test.ts",
        "**/*.test.tsx"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["apps/saas/vercel.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": [
        "packages/lib/src/db/schema/index.ts",
        "packages/lib/src/effect/index.ts",
        "packages/lib/src/effect/services/index.ts",
        "packages/lib/src/effect/services/content/index.ts",
        "packages/lib/src/effect/services/content/github/index.ts",
        "packages/lib/src/effect/services/content/slack/index.ts",
        "packages/lib/src/effect/services/knowledge/index.ts",
        "packages/lib/src/effect/services/search/index.ts",
        "packages/lib/src/effect/services/slack-monitoring/index.ts",
        "packages/auth/src/index.ts",
        "packages/socials/src/index.ts",
        "packages/socials/src/commands/index.ts",
        "packages/socials/src/commands/twitter/index.ts",
        "packages/socials/src/providers/twitter/index.ts",
        "packages/socials/src/services/index.ts",
        "packages/socials/src/storage/index.ts",
        "packages/socials/src/sync/index.ts",
        "packages/socials/src/types/index.ts",
        "tests/e2e/shared/fixtures.ts"
      ],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off"
          }
        }
      }
    }
  ]
}
