{
  "$schema": "https://turborepo.dev/schema.json",
  "globalEnv": [
    "DATABASE_URL",
    "BETTER_AUTH_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "R2_ACCOUNT_ID",
    "R2_ACCESS_KEY_ID",
    "R2_SECRET_ACCESS_KEY",
    "R2_BUCKET_NAME",
    "STRIPE_SECRET_KEY",
    "STRIPE_WEBHOOK_SECRET",
    "STRIPE_PRICE_ID_SCALE_MONTHLY",
    "STRIPE_PRICE_ID_SCALE_YEARLY",
    "STRIPE_PRICE_ID_PRO_MONTHLY",
    "STRIPE_PRICE_ID_PRO_YEARLY",
    "RESEND_API_KEY",
    "RESEND_FROM_EMAIL",
    "REPLICATE_API_TOKEN",
    "ASSEMBLYAI_API_KEY",
    "DEEPL_API_KEY",
    "ZOOM_CLIENT_ID",
    "ZOOM_CLIENT_SECRET",
    "ZOOM_WEBHOOK_SECRET",
    "CRON_SECRET",
    "SLACK_MONITORING_WEBHOOK_URL",
    "SLACK_MONITORING_WEBHOOK_ACCOUNTS",
    "SLACK_MONITORING_WEBHOOK_BILLING",
    "SLACK_MONITORING_WEBHOOK_USAGE",
    "SLACK_MONITORING_WEBHOOK_ERRORS",
    "E2E_TEST_USER_EMAIL",
    "E2E_TEST_USER_PASSWORD",
    "POSTHOG_PERSONAL_API_KEY",
    "POSTHOG_ENV_ID",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "tsc": {
      "dependsOn": ["^tsc"]
    },
    "//#lint": {},
    "test": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
